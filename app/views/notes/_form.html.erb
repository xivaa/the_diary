<%= simple_form_for Note.new,
                    data: {
                      insert_in_list_target: "form",
                      action: "submit->insert-in-list#send"
                    } do |f| %>
  <%= f.input :text, as: :text, label: "Today's thoughts" %>
  <%= f.button :submit, class: "btn btn-gradient"%>
<% end %>
