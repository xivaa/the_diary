<div class="container">
  <div class="popup">
    <h2>New Habit</h2>
      <%= simple_form_for([@goal, @habit]) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <p>Which days are you doing it?</p>
      <%= f.input :frequency, as: :check_boxes, collection: [["Monday", "Monday"], ["Tuesday", "Tuesday"], ["Wednesday", "Wednesday"], ["Thursday", "Thursday"], ["Friday", "Friday"], ["Saturday", "Saturday"], ["Sunday", "Sunday"]] %>
      <%= f.association :goal, collection: @goals %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>

    <%# <%= link_to "Back", goal_path(@goal) %>
  </div>
</div>
