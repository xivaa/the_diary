<button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#edit-popup">
  <i class="fa-solid fa-ellipsis-vertical"></i>
</button>

<div class="modal fade" id="edit-popup" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog pop-up">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Edit new Goal</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="pop-up text-center">
           <%= render partial: "goals/editform", locals: {goal: goal} %>
          <%= link_to "Back", dashboard_path, class: "btn btn-secondary mt-3" %>
        </div>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
