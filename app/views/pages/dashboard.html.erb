<div class="container col-12 text-center">
<h2>dashboard</h2>

<% @puzzles.each do |p| %>
  <% p.goals.each do |goal| %>
      <div class="pop-up">
        <h5><%= goal.name %></h5>
        <p><%= goal.description %></p>
        <p><%= goal.end_date %></p>
        <div class="links d-flex flex-row gap-2">
        <%= link_to "edit", edit_goal_path(goal), class: "btn btn-primary" %>
        <%= link_to "see this goal", goal_path(goal), class: "btn btn-primary" %>
        <%= link_to "delete", goal_path(goal), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } if policy(goal).destroy?%>
      </div>
     </div>
 <% end %>
<% end %>

