<div class="container-dashboard col-12">
      <% date = Date.today %>
      <%= date.strftime('%a, %d %b %Y') %>
    <div class="welcome d-flex justify-content-between align-items-center m-2">
      <h3 class="text-left">Hello, <%= current_user.first_name.capitalize%> !</h3>
      <div class="photo-profile-dashboard flex-end">
      <% if current_user.photo.key.nil? %>
        <%= cl_image_tag "defaultprofile_ld01ce", class: "avatar", crop: :fill %>
      <% else %>
        <%= cl_image_tag current_user.photo.key, height: 50, width: 50, crop: :fill %>
      <% end %>
      </div>
    </div>

  <div class="puzzle mt-4">
    <div class="btn btn-progress">
      <div class="progress-round blue">
          <span class="progress-left">
                            <span class="progress-bar-round"></span>
          </span>
          <span class="progress-right">
                            <span class="progress-bar-round"></span>
          </span>
          <div class="progress-value">50%</div>
      </div>
        <%= link_to "Your progress", puzzles_path, class: "btn " %>
     </div>
  </div>


  <div class="habits-container">
    <h2 class="text-left ms-4 mt-3 pt-2 pb-2">Today's Habits</h2>
    <div class="habits-info" data-controller="habit-update">
      <% @habits.each do |h| %>
          <div class="habits" data-habit-update-habit-id-value="<%= h.id %>">
                  <%= h.name %>
                <input type="checkbox" data-action="change->habit-update#update">
          </div>
            <% end %>
    </div>
  </div>



  <div class="goals-container">
    <h2 class="text-left ms-4 mt-3 pt-2 pb-2">Your Goals</h2>
    <div class="habits-info">
        <% @puzzles.each do |p| %>
          <% p.goals.each do |goal| %>
          <div class="goals">
            <div class="goals-card">
                <%=link_to goal.name, goal_path(goal), class: "goal-link" %>
                <div class="goal-icons">
                  <%= link_to icon("fa-solid", "trash"), goal_path(goal), class: "text-dark", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } if policy(goal).destroy?%>
                  <%= render partial: "shared/editpopup", locals: { goal: goal }%>
                </div>
            </div>
              <div class="progress">
                <div class="progress-bar progress-bar-striped  gradient-bg" role="progressbar" aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: <%= goal.completed_habits_percentage%>%"><%= goal.completed_habits_percentage.round%>%</div>
              </div>
          </div>
          <% end %>
        <% end %>
    </div>
  </div>

<%= link_to "add a puzzle", new_puzzle_path, class: "btn btn-gradient" %>
