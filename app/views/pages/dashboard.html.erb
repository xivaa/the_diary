<div class="container col-12 text-center mb-5">
<h2>dashboard</h2>
<%# <div class="puzzle"> %>
<% @puzzles.each do |p| %>
  <% p.goals.each do |goal| %>
      <div class="pop-up">
        <h5><%= goal.name %></h5>
        <p><%= goal.description %></p>
        <p><%= goal.end_date %></p>
        <p><%= goal.completed %></p>
        <div class="links d-flex flex-row gap-2 align-items-center">
        <%# <%= link_to "edit", edit_goal_path(goal), class: "btn btn-primary"%>
        <%= link_to icon("fa-solid", "trash"), goal_path(goal), class: "text-dark", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } if policy(goal).destroy?%>
        <%= link_to "see this goal", goal_path(goal), class: "btn btn-primary" %>
        <%= render partial: "shared/editpopup", locals: { goal: goal }%>
      </div>
     </div>
 <% end %>
<% end %>
<%# </div> %>

<div class="habits">
  <% @habits.each do |h| %>
    <div class="pop-up">
      <h5><%= h.name %></h5>
      <p><%= h.description %></p>
      <p><%= h.frequency %></p>
      <p><%= h.goal.name %></p>
      <p><%= h.completed %></p>
   </div>
  <% end %>

</div>

<% @puzzles.each do |p| %>
  <%= link_to "see my puzzle", puzzle_path(p)  %>
<% end %>

<%= link_to "ADD NEW GOAL", new_goal_path, class: "btn btn-secondary"%>

<%= link_to "add a puzzle", new_puzzle_path, class: "btn btn-primary" %>
</div>
