<div class="container-dashboard col-12">
      <% date = Date.today %>
      <%= date.strftime('%a, %d %b %Y')%>
    <div class="welcome d-flex justify-content-between align-items-center m-2">
      <h3 class="text-left">Hello, <%= current_user.first_name.capitalize%> !</h3>
      <div class="photo-profile-dashboard flex-end">
      <% if current_user.photo.key.nil? %>
      <%= link_to user_path(current_user) do %>
        <%= cl_image_tag "defaultprofile_ld01ce", class: "avatar", crop: :fill %>
        <% end %>
      <% else %>
        <%= link_to user_path(current_user) do %>
        <%= cl_image_tag current_user.photo.key, height: 50, width: 50, crop: :fill %>
        <% end %>
      <% end %>
      </div>
    </div>

  <div class="puzzle justify-content-evenly mt-4 btn btn-progress">
    <div class="progress-fat">
        <div class="progress-bar-fat progress-bar-striped" role="progressbar" aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: <%= @puzzles.last.nil? ? 0 : @puzzles.last.completed_goals_percentage %>%">
        </div>
          <% if @puzzles.last.nil? %>
            <h6 class="number-circle">0%</h6>
          <% else %>
          <h6 class="number-circle"><%= @puzzles.last.completed_goals_percentage%>%</h6>
          <% end %>
      </div>
        <%= link_to "My progress", puzzles_path, class: "your-progress"%>
  </div>

  <div class="habits-container">
    <h2 class="text-left ms-4 mt-3 pt-2 pb-2">Today's Habits</h2>
    <div class="habits-info" data-controller="habit-update">
      <% today = @puzzles.last.goals %>
        <% today.each do |g| %>
          <% g.habits.each do |h| %>
          <% if h.frequency.include?(date.strftime('%A')) %>
            <%= render "habits/habits_dashboard", h: h %>
            <% end %>
          <% end %>
        <% end %>
    </div>
  </div>



  <div class="goals-container">
    <h2 class="text-left ms-4 mt-3 pt-2 pb-2">Your Goals</h2>
    <div class="habits-info">
        <% @puzzles.last.goals.each do |goal| %>
        <% habit_size = goal.habits.any? { |h| h.frequency.include?(date.strftime('%A')) } %>
          <% if habit_size == true  %>
            <div class="goals">
              <div class="goals-card">
                  <h5><%=link_to goal.name, goal_path(goal), class: "goal-link" %></h5>
                  <div class="goal-icons">
                   <%= link_to icon("fa-solid", "trash"), goal_path(goal), class: "text-muted", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } if policy(goal).destroy?%>
                    <%= render partial: "shared/editpopup", locals: { goal: goal }%>
              </div>
            </div>
              <div class="progress">
                <div class="progress-bar progress-bar-striped  gradient-bg" role="progressbar" aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: <%= goal.completed_habits_percentage%>%"><%= goal.completed_habits_percentage.round%>%</div>
              </div>
          </div>
          <% end %>
        <% end %>
    </div>
  </div>


<%= link_to "add a puzzle", new_puzzle_path, class: "btn btn-gradient-ap" %>
